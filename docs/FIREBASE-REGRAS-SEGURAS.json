{
  "rules": {
    "comentarios": {
      "$noticiaId": {
        ".read": true,
        "$comentarioId": {
          ".write": "auth != null && !root.child('comentarios').child($noticiaId).child($comentarioId).exists()",
          ".validate": "newData.hasChildren(['nome', 'texto', 'data', 'timestamp'])",
          "nome": {
            ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 50 && newData.val().matches(/^[^<>]*$/)"
          },
          "texto": {
            ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 1000 && newData.val().matches(/^[^<>]*$/)"
          },
          "data": {
            ".validate": "newData.isString()"
          },
          "timestamp": {
            ".validate": "newData.isNumber()"
          },
          "$other": {
            ".validate": false
          }
        }
      }
    },
    "likes": {
      "$noticiaId": {
        ".read": true,
        "$userId": {
          ".write": "auth != null && auth.uid === $userId",
          ".validate": "newData.isBoolean() || !newData.exists()"
        }
      }
    },
    "site_stats": {
      ".read": true,
      ".write": false
    }
  }
}
